<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="linusfessler.alarmtiles.viewmodel.WakeUpSettingsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/wake_up_settings_alarm_info"
                style="@style/Info" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wake_up_settings_alarm"
                android:checked="@={viewModel.alarmEnabled}" />

            <LinearLayout
                android:id="@+id/alarm_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_height"
                android:clickable="true"
                android:focusable="true"
                android:visibility="@{viewModel.alarmEnabled ? View.VISIBLE : View.GONE}">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|start"
                    android:text="@string/wake_up_settings_alarm_time"
                    android:textColor="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:text="@{viewModel.alarmTime}"
                    android:textColor="@color/lightGrey"
                    tools:text="8:00" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/wake_up_settings_both_timer_and_alarm_info"
                android:visibility="@{viewModel.showingBothTimerAndAlarmInfo ? View.VISIBLE : View.GONE}"
                style="@style/Info" />

        </LinearLayout>

    </ScrollView>

</layout>