<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="linusfessler.alarmtiles.viewmodel.SleepSettingsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fragment_padding">

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/sleep_settings_timer_info"
                    style="@style/Info" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fall_asleep_settings_timer"
                    android:checked="@={viewModel.timerEnabled}" />

                <LinearLayout
                    android:id="@+id/snooze_duration"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{viewModel.timerEnabled ? View.VISIBLE : View.GONE}">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|start"
                        android:text="@string/fall_asleep_settings_duration"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|end"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:text="@{viewModel.timerDuration}"
                        android:textColor="@color/lightGrey"
                        tools:text="8 hours" />

                </LinearLayout>

                <View style="@style/HorizontalLine" />

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/sleep_settings_do_not_disturb_info"
                    style="@style/Info" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_settings_do_not_disturb"
                    android:checked="@={viewModel.enteringDoNotDisturb}" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_height"
                    android:gravity="center_vertical"
                    android:text="@string/sleep_settings_allow_priority_notifications"
                    android:visibility="@{viewModel.enteringDoNotDisturb ? View.VISIBLE : View.GONE}"
                    android:checked="@={viewModel.allowingPriorityNotifications}" />

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:text="@string/button_next"
            style="@style/Button" />

    </LinearLayout>

</layout>