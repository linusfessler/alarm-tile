<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="linusfessler.alarmtiles.viewmodel.SleepSettingsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/sleep_settings_timer_info"
                style="@style/Info" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fall_asleep_settings_timer"
                android:checked="@={viewModel.timerEnabled}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time"
                android:layout_width="@dimen/time_size"
                android:layout_height="@dimen/time_size"
                android:layout_gravity="center"
                android:visibility="@{viewModel.timerEnabled ? View.VISIBLE : View.GONE}"
                android:text="@{viewModel.time}"
                tools:text="12:00"
                style="@style/Time" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@string/sleep_settings_do_not_disturb_info"
                style="@style/Info" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sleep_settings_do_not_disturb"
                android:checked="@={viewModel.enteringDoNotDisturb}" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_height"
                android:gravity="center_vertical"
                android:text="@string/sleep_settings_allow_priority_notifications"
                android:visibility="@{viewModel.enteringDoNotDisturb ? View.VISIBLE : View.GONE}"
                android:checked="@={viewModel.allowingPriorityNotifications}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_next"
                style="@style/Button" />

        </LinearLayout>

    </ScrollView>

</layout>