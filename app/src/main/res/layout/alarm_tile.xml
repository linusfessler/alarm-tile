<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="@dimen/alarm_tile_size"
        android:layout_height="@dimen/alarm_tile_size"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_round_ripple"
            android:backgroundTint="@color/quickSettingsBackgroundDisabled"
            android:clickable="false"
            android:focusable="false"
            android:padding="@dimen/alarm_tile_padding"
            android:tint="@color/quickSettingsIconDisabled"
            tools:src="@drawable/ic_alarm_24px" />

    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/colorOnBackground"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:text="123456789012345" />

</androidx.constraintlayout.widget.ConstraintLayout>