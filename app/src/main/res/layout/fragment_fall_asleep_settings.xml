<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="linusfessler.alarmtiles.viewmodel.FallAsleepSettingsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_height"
                android:text="@string/fall_asleep_settings_timer_info"
                style="@style/Info" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fall_asleep_settings_timer"
                android:checked="@={viewModel.timerEnabled}" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/time_size"
                android:layout_height="@dimen/time_size"
                android:layout_gravity="center"
                tools:text="12:00"
                style="@style/Time" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fall_asleep_settings_fade_music_out"
                android:checked="@={viewModel.slowlyFadingMusicOut}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_next" />

        </LinearLayout>

    </ScrollView>

</layout>