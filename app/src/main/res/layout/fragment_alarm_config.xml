<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_config_title"
        style="@style/Title" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm_config_vibrate" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/flashlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm_config_flashlight" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <linusfessler.alarmtiles.shared.views.TimeInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/alarm_config_snooze_duration" />

</LinearLayout>
