<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:clipChildren="false">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                android:backgroundTint="@color/quickSettingsBackgroundDisabled"
                android:padding="10dp"
                android:tint="@color/quickSettingsIconDisabled"
                android:contentDescription="@string/accessibility_alarm_tile_icon"
                tools:src="@drawable/ic_alarm_24px" />

            <ImageView
                android:id="@+id/ripple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/accessibility_alarm_tile_ripple" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/colorOnBackground"
            android:textSize="12sp"
            tools:text="label" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            tools:text="subtitle" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

    </LinearLayout>

</merge>