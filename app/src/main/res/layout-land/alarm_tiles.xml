<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="1">

        <linusfessler.alarmtiles.views.QuickSettingsTile
            android:id="@+id/sleep_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_marginBottom="24dp"
            app:enabled="false"
            app:icon="@drawable/ic_music_off_24px"
            app:label="@string/sleep_timer" />

        <linusfessler.alarmtiles.views.QuickSettingsTile
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_marginBottom="24dp"
            app:enabled="false"
            app:icon="@drawable/ic_alarm_24px"
            app:label="@string/alarm" />

        <linusfessler.alarmtiles.views.QuickSettingsTile
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_marginBottom="24dp"
            app:enabled="false"
            app:icon="@drawable/ic_hourglass_empty_24px"
            app:label="@string/timer" />

        <linusfessler.alarmtiles.views.QuickSettingsTile
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_marginBottom="24dp"
            app:enabled="false"
            app:icon="@drawable/ic_timer_24px"
            app:label="@string/stopwatch" />

    </GridLayout>

</layout>